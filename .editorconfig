# https://editorconfig.org

root = true

[*]
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,clangd,clang-format}]
indent_style = space
indent_size = 2

[*.rst]
indent_style = space
indent_size = 4
